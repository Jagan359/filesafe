<h1>File security-Beta</h1>

<h2>Upload files</h2>
<%= form_tag({action: :upload}, multipart: true) do %>
<%= file_field_tag 'file' %>
<%= submit_tag "Upload" %>
<% end %>
<!-- <form action="/home/upload"
      class="dropzone"
      id="my-awesome-dropzone"></form>
 --><hr/>
 <!-- Table to view uploaded files. -->

<div class="tbl_container">
<table class="table table-striped table-hover ">

<tbody>
  	<% @dat.each do |f| %>
    <tr>
      <td><%= f.filename %></td>
      <td><%= f.created_at %></td>
      <% if f.status=="LOCAL" then %>
      			<td ><%= link_to image_tag('download.png', :class => 'toolsicon'), url_for({:controller => "home", :action => 'download', :pa => f.filename})%></td>
		      <td><%= link_to image_tag('del.png', :class => 'toolsicon'), url_for({:controller => 'home', :action => 'delete', :pa => f.filename}), data:{ confirm: 'Really want to DELETE??'}%></td>
           <td ><%= link_to image_tag('cloudup.jpg', :class => 'toolsicon'), url_for({:controller => "cloud", :action => 'splice', :pa => f.filename})%></td>
           <td ><%= link_to image_tag('goog.jpg', :class => 'toolsicon'), url_for({:controller => "cloud", :action => 'googoauth', :pa => f.filename})%></td>
     
       <% elsif f.status == "CLOUD" then %>
           <td ><%= link_to image_tag('clouddown.jpg', :class => 'toolsicon'), url_for({:controller => "cloud", :action => 'download', :pa => f.filename})%></td>
          <% end %>
       
    </tr>
    <% end %>
    
    </tbody>
  
    </table>
</div>